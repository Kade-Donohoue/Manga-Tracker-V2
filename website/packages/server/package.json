{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "cp ../../.env.dev .dev.vars && wrangler dev",
    "deploy": "wrangler secret bulk ../../.env.production -e production && wrangler deploy -e production --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@better-auth/sso": "^1.4.1",
    "@hono/zod-validator": "^0.7.5",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251119.0",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3",
    "wrangler": "^4.4.0"
  }
}