name = "manga-server"
main = "src/index.ts"
compatibility_date = "2025-11-18"
compatibility_flags = [ "nodejs_compat" ]

[observability]
enabled = true
head_sampling_rate = 1

[vars]
ENVIRONMENT = "dev"

[[d1_databases]]
binding = "DB"
database_name = "db-name-here"
database_id = "db-id"
remote = true
migrations_dir = "drizzle/migrations"

[[r2_buckets]]
binding = "IMG"
bucket_name = "bucket-name-here"
preview_bucket_name = "dev-preview-name-here"
remote = true

[[kv_namespaces]]
binding = "KV"
id = "kv_id_here"
preview_id = "dev_kv_id_here"
remote = true